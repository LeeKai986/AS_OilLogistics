<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="#FC4F4F">

        <TextView
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <ImageView
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_centerInParent="true"
            android:background="@mipmap/login_logo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_user_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#14878787"
        android:drawableLeft="@mipmap/login_user"
        android:drawablePadding="19dp"
        android:hint="请输入手机号"
        android:inputType="number"
        android:maxLength="11"
        android:maxLines="1"
        android:paddingBottom="12dp"
        android:paddingLeft="30dp"
        android:paddingTop="12dp"
        android:textColorHint="#7f565656"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/login_password_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="#14878787"
        android:digits="@string/input_type"
        android:drawableLeft="@mipmap/login_password"
        android:drawablePadding="19dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:maxLines="1"
        android:paddingBottom="12dp"
        android:paddingLeft="30dp"
        android:paddingTop="12dp"
        android:textColorHint="#7f565656"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/login_register_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="注册" />

        <TextView
            android:id="@+id/login_forget_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:layout_marginTop="10dp"
            android:text="忘记登录密码？"
            android:textColor="#878787"
            android:textSize="11sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <TextView
            android:id="@+id/login_sub_tv"
            android:layout_width="242dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:background="#CCCCCC"
            android:enabled="false"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/colorWhite"
            android:textSize="17sp" />
    </RelativeLayout>
</LinearLayout>