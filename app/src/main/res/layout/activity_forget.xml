<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_height"
                android:background="#FC4F4F">

                <RelativeLayout
                    android:id="@+id/finish_rl"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="14dp"
                        android:layout_marginRight="14dp"
                        android:src="@mipmap/top_back" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/forget_title_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:text="找回密码"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp">

                <ImageView
                    android:layout_width="50pt"
                    android:layout_height="50pt"
                    android:layout_centerInParent="true"
                    android:background="@mipmap/login_logo" />
            </RelativeLayout>

            <EditText
                android:id="@+id/forget_user_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#14878787"
                android:drawablePadding="19dp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:textColorHint="#7f565656"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/forget_verify_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#14878787"
                    android:drawablePadding="19dp"
                    android:hint="验证码"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:paddingBottom="12dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="12dp"
                    android:textColorHint="#7f565656"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/forget_verify_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="#FC4F4F"
                    android:paddingBottom="12dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="12dp"
                    android:text="获取验证码"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />
            </RelativeLayout>

            <EditText
                android:id="@+id/forget_password_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="#14878787"
                android:digits="@string/input_type"
                android:drawablePadding="19dp"
                android:hint="6-16位字母、数字新密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:paddingBottom="12dp"
                android:paddingLeft="30dp"
                android:paddingTop="12dp"
                android:textColorHint="#7f565656"
                android:textSize="17sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <EditText
                    android:id="@+id/forget_again_password_et"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#14878787"
                    android:digits="@string/input_type"
                    android:drawablePadding="19dp"
                    android:hint="再次输入"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:paddingBottom="12dp"
                    android:paddingLeft="30dp"
                    android:paddingTop="12dp"
                    android:textColorHint="#7f565656"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/forget_pass_agin_pass_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="9dp"
                    android:text="两次输入密码不一致"
                    android:textColor="#FC4F4F"
                    android:textSize="15sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/forget_sub_tv"
                    android:layout_width="242dp"
                    android:layout_height="40dp"
                    android:layout_centerInParent="true"
                    android:background="#CCCCCC"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="确定"
                    android:textColor="@color/colorWhite"
                    android:textSize="17sp" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>